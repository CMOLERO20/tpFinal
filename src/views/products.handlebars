<div class="container">
   
    <div class="row p-4">
      <div class="col-8">
        <h1>Productos</h1>
      </div>
      <div class="col-4 p-3">
         
      <a href="/new-product"><button class="btn btn-outline-primary">Nuevo Producto</button></a>
    
      </div>
    </div>
 <div class="row">
   <div class = "">
    <table  class="table">
  <tr>
    <th scope="col">Producto</th>
    <th scope="col">Descripcion</th>
    <th scope="col">Precio</th>
    <th scope="col">Stock</th>
  </tr>
  {{#each productos}}
  <tr scope="row">
    <td>{{this.title}} </td>
    <td>{{this.description}} </td>
    <td>{{this.price}} </td>
    <td>{{this.stock}} </td>
    <td>
     <form action="/api/products/delete/{{this._id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar</button>
        </form>
      
    </td>
     <td>
      <a href="/edit-product/{{this._id}}"><button class="btn btn-outline-primary">Editar</button></a>
    </td>
  </tr>
    {{/each}}
</table>
  </div>  
 
 </div>
  
</div>