<div class="container">
      
    <div class="row p-4">
      <div class="col-8 ">
        <h1>Productos Disponibles</h1>
      </div>
      <div class="col-4">
         
      <a href="/cart-view"><button class="btn btn-outline-primary">Ver Carrito</button></a>
    
      </div>
    </div>
 <div class="row p-2">
   
    <table  class="table caption-top">
  <tr>
    <th scope="col">Producto</th>
    <th scope="col">Descripcion</th>
    <th scope="col">Precio</th>
    <th scope="col">Stock</th>
  </tr>
  {{#each productos}}
  <tr scope="row">
    <td>{{this.title}} </td>
    <td>{{this.description}} </td>
    <td>{{this.price}} </td>
    <td>{{this.stock}} </td>

    <td>
      <a href="/api/carts/product/{{this._id}}"><button class="btn btn-outline-primary">Agregar al carrito</button></a>
    </td>
  </tr>
    {{/each}}
</table>
   
 
 </div>
  
</div>